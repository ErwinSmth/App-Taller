<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="Selecciona tu tipo de registro"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp"/>

    <Button
        android:id="@+id/btnEstudiante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrarse como Estudiante" />

    <Button
        android:id="@+id/btnProfesor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrarse como Profesor"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnOrganizador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrarse como Organizador"
        android:layout_marginTop="16dp" />
</LinearLayout>
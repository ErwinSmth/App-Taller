<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Bienvenida -->
        <TextView
            android:text="Hola, Bienvenido/a 👋"
            android:textSize="16sp"
            android:textColor="#444"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="YuwiinVT"
            android:id="@+id/tvINameUser"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Título principal -->
        <TextView
            android:text="¡Top cursos en Chimbote\naprende, crece y destaca!"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Subtítulo -->
        <TextView
            android:text="Empieza aprende hoy"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#6A00FF"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Cursos destacados -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:weightSum="3">

            <!-- Curso 1 -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#D99C9C" />

                <TextView
                    android:text="Barbería Avanzada: Técnicas Modernas\nJorge Álvarez"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="⭐ 4.5 ★★★★★ (by 13,657)"
                    android:textSize="12sp"
                    android:textColor="#FFA000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="S/. 120.00"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Curso 2 -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#E9D9A1" />

                <TextView
                    android:text="Diseño Gráfico para Principiantes\nCarla Mendoza"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="⭐ 4.5 ★★★★★ (by 13,657)"
                    android:textSize="12sp"
                    android:textColor="#FFA000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="S/. 95.00"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Curso 3 -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#F79999" />

                <TextView
                    android:text="Repostería Creativa y Decoración\nde Tortas\nLuis Ramírez"
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="⭐ 4.5 ★★★★★ (by 13,657)"
                    android:textSize="12sp"
                    android:textColor="#FFA000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="S/. 110.00"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <!-- Docentes Mejor Valorados -->
        <TextView
            android:text="Docentes Mejor Valorados"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingBottom="16dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Docente 1 -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginEnd="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/profe1"

                    android:scaleType="centerCrop" />

                <TextView
                    android:text="Jorge"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Docente 2 -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginEnd="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/profe2"

                    android:scaleType="centerCrop" />

                <TextView
                    android:text="Carla"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Docente 3 -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginEnd="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/profe3"

                    android:scaleType="centerCrop" />

                <TextView
                    android:text="Luisa"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- Puedes agregar más docentes aquí -->

        </LinearLayout>


    </LinearLayout>
</ScrollView>
